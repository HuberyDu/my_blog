%h1#lifeSlogon
  Feel more inspired in their everyday lives. 
  %b
    Join us. 

%section#main
  %section#lifeposts
    %article.post
      .postTitles
        .postData
          =@life.created_at.strftime("%^b %d,%Y")

        .postInfo
          .postTitle
            %h2
              = @life.title
            %p
              - @life.tags.each do |tag|
                %a{:href => "#{}"} 
                  = tag
                ,
                
          .postCommentNum
            %i
              =@life.comments.size - 1
            Comments
          .postShare
            %img{:src => "/assets/projects/tencent.jpg", :alt => ""}/ 
      .postContent
        = raw(@life.content)

    
    %section#commentBlock
      .comments
        - binding.pry
        - @comments.each do |comment|
          .commentContent
            = comment.content
          %p
            = comment.name
            = comment.created_at.strftime("%Y-%m-%d %H:%M:%S") unless comment.created_at.blank?

    %section#leaveMsg
      = simple_form_for @comment, url: life_comments_path(@life), method: "POST", html: { name: "comment"}  do |f|
        = f.error_notification
        %table
          = f.input :name, required: true, input_html: { maxlength: 20 }
          = f.input :email,:placeholder => "will not be published"
          = f.input :website
          = captcha_tag :id => "captcha_img" 
          = text_field_tag :captcha
          %span.formerrspan{style: "color: red"}= flash[:alert] unless flash[:alert].nil?
          = f.input :content, as: :text
        .actions
          = f.submit 'submit'

      = javascript_include_tag "comments"

    %section#paginate 
      = link_to  "← NEWER ENTRIES", life_path(@life.next),:class => 'newerEntries' unless @life.next.blank?
      = link_to "PREVIOUS ENTRIES →", life_path(@life.prev), :class => 'prevEntries' unless @life.prev.blank?

  %aside
