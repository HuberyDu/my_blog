.navbar.navbar-fluid-top.navbar-inverse
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand(href="/admin/home") 
        = t("app_name")
      .container.nav-collapse
        %ul.nav.pull-right
          - if user_signed_in?
            %li= link_to "WelcomeBack #{current_user.role} : #{current_user.username}", "#"
            %li= link_to "Log Out", destroy_user_session_path, :method => :delete
          -else
            %li= link_to 'SignIn',new_user_session_path