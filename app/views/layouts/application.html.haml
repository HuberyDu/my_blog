    = stylesheet_link_tag params[:controller]
    = javascript_include_tag "application"


  %body
    .navbar.navbar-fluid-top.navbar-inverse
      .navbar-inner
        .container-fluid
          .container.nav-collapse
            %ul.nav
              %li= link_to "简述", "/path1"
              %li= link_to "旅行", "/path2"
              %li= link_to "马拉松", "/path3"
              %li= link_to "编程", "/"
              %li= link_to "博客", articles_path
    = yield
