!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "sjtu-cfmsf"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag "admin", :media => "all"
    = javascript_include_tag "admin"

  %body
    = render "shared/topnav"
    %div.container
      %div.row
        %div.span3
          - if user_signed_in?
            %ul.nav.nav-list.sidenav.affix-top
              %li{class: ("active" if controller_name == "home")}= link_to "Home", admin_home_index_path
              - if current_user.role == "admin"
                %li{class: ("active" if controller_name == "users")}= link_to "User Management", admin_users_path
                %li{class: ("active" if controller_name == "categories")}= link_to "Category Management", admin_categories_path
              %li{class: ("active" if controller_name == "articles")}= link_to "Article Management", admin_articles_path
        %div.span9.content
          - unless alert.blank?
            .alert.alert-error.fade.in
              %a.close{"data-dismiss" => "alert"} &times;
              = alert
          - unless notice.blank?
            .alert.alert-success.fade.in
              %a.close{"data-dismiss" => "alert"} &times;
              = notice
          = yield