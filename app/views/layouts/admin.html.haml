!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Bancheng"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag params[:controller]

  %body
    .navbar.navbar-fluid-top.navbar-inverse
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/admin/home") 
            = t("app_name")
          .container.nav-collapse
            %ul.nav.pull-right
              %li= link_to "Project", admin_projects_path
              %li= link_to "User", admin_users_path
              %li= link_to "Life", admin_lifes_path
              %li= link_to "LeaveMessage", admin_leave_messages_path
              %li= link_to "Career", admin_careers_path
              %li= link_to "Client", admin_clients_path
              %li= link_to "Slide", admin_slides_path
              %li= link_to "Category Management", admin_categorys_path
              - if user_signed_in?
                %li= link_to "LoginOut", destroy_user_session_path, :method => :delete
              -else
                %li= link_to 'SignIn',new_user_session_path
    - if params[:action] == "new" || params[:action] == "edit"
      %div.span2
      %div.span10.container
        = yield
    - else
      %div.span1
      %div.span11.container
        = yield

