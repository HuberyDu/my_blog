.container
  .span12
    .row
      .span1
      .span7.article_left
        - @articles.each do |article|
          .article_panel
            .article.whole_article
              = article.title
              = raw(article.content)
            = link_to "阅读全文", article_path(article.id), class:"read_more"
            %p.blank 
      .span3.article_right
        = render "lately_article"
        = render "tags"
      .span1
