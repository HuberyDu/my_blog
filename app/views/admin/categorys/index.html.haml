%h1 Category Management

= link_to 'New Category', new_admin_category_path

%table.table.center.table-bordered
  %thead
    %tr
      %td Category CHN Name
      %td Category FR name
      %td Number of articles
      %td Operation
    %tbody
    - @categories.each do |category|
      %tr
        %td= category.chinese_name
        %td= category.franch_name
        %td= category.articles.size
        %td
          = link_to 'Edit', edit_admin_category_path(category)
          = link_to 'Delete', admin_category_path(category), :method => :delete, :data => { :confirm => 'Are you sure?' }