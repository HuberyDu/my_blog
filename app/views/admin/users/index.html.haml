%h1 User Management

%table
  %tr
    %th
    %th
    %th
   
  = link_to 'New User', new_admin_user_path

  %table.table.center.table-bordered
    %thead
      %tr
        %td User Name
        %td Email
        %td role
        %td Operation
    %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.role
        %td
          = link_to t(:edit, scope: "crud"), edit_admin_user_path(user)
          = link_to t(:destroy, scope: "crud"), admin_user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }


