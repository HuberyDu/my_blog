.row
  .span6
    %h3 User Management
  .span3
    %h3
      = link_to 'Add a new user', new_admin_user_path
%table
  %tr
    %th
    %th
    %th
  %table.table.center.table-bordered
    %thead
      %tr
        %td User Name
        %td role
        %td Operation
    %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.role
        %td
          = link_to t(:edit, scope: "crud"), edit_admin_user_path(user)
          = link_to t(:destroy, scope: "crud"), admin_user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }


