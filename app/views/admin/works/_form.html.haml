= simple_form_for [:admin, @project,@work] do |f|
  - if @work.errors.any?
    #error_explanation
      %h2= "#{pluralize(@work.errors.count, "error")} prohibited this work from being saved:"
      %ul
        - @work.errors.full_messages.each do |msg|
          %li= msg
  %table
    = f.input :name
    = f.input :desc, :as => :kindeditor
    = f.input :content
    = f.input :albums, input_html: {multiple: :true, :name => 'albums[]'}, :as => :file
    = f.input :thumb, :as => :file
    = f.input :tag_list
  .actions
    = f.submit 'Save'

