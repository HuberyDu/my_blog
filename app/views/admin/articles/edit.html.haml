.row
  .span6
    %h3 Article Management
  .span3
    %h3
      = link_to 'Go to the Article list', admin_articles_path(category_id: @article.category_id )

/ - if current_user.role == "admin"

/   - if @article.status == "pending"
/     = simple_form_for @article, url: approve_admin_article_path, method: "PUT" do |f|
/       = f.button :submit, "Approve", class:"btn btn-success"
/   - elsif @article.status == "public"
/     = simple_form_for @article, url: reject_admin_article_path, method: "PUT" do |f|
/       = f.button :submit, "Reject", class:"btn btn-danger"

- if can? :approve, @article
  = simple_form_for @article, url: approve_admin_article_path, method: "PUT", html:{class:"pull-left"} do |f|
    = f.button :submit, "Approve", class:"btn btn-success"
- if can? :reject, @article
  = simple_form_for @article, url: reject_admin_article_path, method: "PUT", html:{class:"pull-left"} do |f|
    = f.button :submit, "Reject", class:"btn btn-danger"
- if can? :delete, @article
  = simple_form_for @article, url: admin_article_path(@article), method: :delete do |f|
    = f.button :submit, "Delete", class:"btn btn-danger", data: {confirm: "Are you sure ?"}
= render 'form'

