.row
  .span6
    %h3 Article Management
  .span3
    %h3
      = link_to 'New Article', new_admin_article_path
.pagination
  %ul
    - current_user.categories.all.each do |category|
      - if category.id == @current_category.id
        %li.active
          %span= category.chinese_name
      - else
        %li.disabled
          %span
            = link_to category.chinese_name, admin_articles_path(category_id: category.id)
= render "list"
