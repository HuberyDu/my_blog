%h1 Article Management

= link_to 'New Article', new_admin_article_path

.btn-group.pull-right
  %a.btn.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
    = @current_category.chinese_name
    %span.caret
  %ul.dropdown-menu
    - current_user.categories.all.each do |category|
      %li 
        = (link_to category.chinese_name, admin_articles_path(category_id: category.id)) unless @current_category.id == category.id

%table.table.center.table-bordered
  %thead
    %tr
      %td Article Name
      %td Status
      %td Operation
    %tbody
    - @articles.each do |article|
      %tr{class: article_status_class(article)}
        %td= article.chinese_title
        %td= article.status
        %td
          - if current_user.role == "admin" || (current_user.role == "editor" and article.status == "pending")
            = link_to 'Edit', edit_admin_article_path(article)
