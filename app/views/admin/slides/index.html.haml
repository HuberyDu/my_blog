%h1 Listing slides

= link_to 'New Slide', new_admin_slide_path

%table.table.center.table-bordered
  %thead
    %tr
      %td id
      %td name
      %td background_color
      %td font_color
      %td link
      %td pic
      %td thumb
      %td
  %tbody
  - @slides.each do |slide|
    %tr
      %td= slide.id
      %td= slide.name
      %td{style:"background-color: #{slide.background_color}"}
      %td{style:"background-color: #{slide.font_color}"}
      %td= slide.link
      %td
        %img{src:"#{slide.pic}?imageView/1/w/50/h/50"} 
      %td
        %img{src:"#{slide.thumb}?imageView/1/w/50/h/50"}
      %td
        = link_to t(:edit, scope: "crud"), edit_admin_slide_path(slide)
        = link_to t(:destroy, scope: "crud"), admin_slide_path(slide), :method => :delete, :data => { :confirm => 'Are you sure?' }